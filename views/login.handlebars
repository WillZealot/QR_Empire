<form id="login" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input name="email" type="email" class="form-control" id="email-login" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="password-login" name="password" placeholder="Password">
  </div>
  </br>
  <button type="submit" class="btn btn-primary" id="loginBtn">Submit</button>
</form>
</br>
<a id="signup" href="/signup">Sign Up Instead</a>

<script src="/js/login.js"></script>